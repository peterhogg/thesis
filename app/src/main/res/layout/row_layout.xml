<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/topic"
        android:padding="5dp"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/like"
        android:id="@+id/likeButton"
        android:layout_below="@+id/description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:textOff="Like"
        android:textOn="Unlike" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dsb_min="0"
        app:dsb_max="10"
        android:id="@+id/understandBar"
        android:layout_below="@+id/understandLbl"
        android:layout_alignEnd="@+id/likeButton"
        android:layout_marginEnd="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/understand"
        android:id="@+id/understandLbl"
        android:layout_below="@+id/likeButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:fontFamily="EB Garamond "
        android:id="@+id/description"
        android:layout_below="@+id/topic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp" />
</RelativeLayout>